<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lukag.atvoznired.MainActivity">

    <Spinner
        android:id="@+id/izstop_spin"
        android:layout_width="230dp"
        android:layout_height="24dp"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/vstop_spin"
        android:layout_alignStart="@+id/vstop_spin"
        android:layout_column="0"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_row="2"
        android:layout_weight="1"
        android:spinnerMode="dialog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vstop_spin"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/izstop"
        app:layout_constraintHorizontal_bias="0.621" />

    <Spinner
        android:id="@+id/vstop_spin"
        android:layout_width="230dp"
        android:layout_height="24dp"
        android:layout_below="@+id/izstop_spin"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:spinnerMode="dialog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/vstop"
        app:layout_constraintHorizontal_bias="0.621" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_row="6"
        android:text="@string/button_send"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textCalendar" />

    <TextView
        android:id="@+id/izstop"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/izstop"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vstop" />

    <TextView
        android:id="@+id/vstop"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/vstop"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_calendar"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="showDatePickerDialog"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textCalendar"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/izstop_spin"
        app:layout_constraintHorizontal_bias="0.483" />

    <EditText
        android:id="@+id/textCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/izstop_spin" />

</android.support.constraint.ConstraintLayout>
